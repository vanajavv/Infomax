@using System.Data;
@using System.Data.SqlClient;
@model System.Data.DataTable
@{
    ViewBag.Title = "ViewReq_Demo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .au-chat {
        width: 100%;
    }
</style>

@{

<div class="main-content" style="margin-top:-100px;">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            

                <div class="col-lg-6">
                    <div class="au-card au-card--no-shadow au-card--no-pad m-b-40">
                        <div class="au-card-title" style="background-image:url('images/bg-title-02.jpg');">
                            <div class="bg-overlay bg-overlay--blue"></div>
                            <h3>
                                <i class="zmdi zmdi-comment-text"></i>Request For Demo
                            </h3>

                        </div>
                        <div class="au-inbox-wrap js-inbox-wrap">

                            @if (ViewBag.Data == null)
                            {

                            <div class="au-message js-list-load">
                                <div class="au-message-list">
                                    @foreach (DataRow dr in Model.Rows)
                                    {

                                    <div class="au-message__item unread">
                                        <div class="au-message__item-inner">
                                            <div class="au-message__item-text">
                                                @if (@dr["Status"].ToString() == "0")
                                                {
                                                <a href="@Url.Action("ViewChat", "AdminDash", new { ID = @dr["Demo_ID"].ToString() })">
                                                    <div class="avatar-wrap">
                                                        <div class="avatar">
                                                            <img src="@Url.Content(@dr["image"].ToString())" alt="John Smith">
                                                        </div>
                                                    </div>
                                                    <div class="text">
                                                        <h5 class="name" style="color:red">@dr["Subject"]</h5>
                                                        <p>@dr["Name"]</p>
                                                    </div>
                                                </a>


                                                @*<div class="au-message__item-time">
                                                    <span>@ViewBag.TimeMsg</span>
                                                </div>*@
                                                }

                                                else
                                                {
                                                <a href="@Url.Action("ViewChat", "AdminDash", new { ID = @dr["Demo_ID"].ToString() })">
                                                    <div class="avatar-wrap">
                                                        <div class="avatar">
                                                            <img src="@Url.Content(@dr["image"].ToString())" alt="John Smith">
                                                        </div>
                                                    </div>
                                                    <div class="text">
                                                        <h5 class="name">@dr["Subject"]</h5>
                                                        <p>@dr["Name"]</p>
                                                    </div>
                                                </a>
                                                }
                                            </div>
                                            <div class="au-message__item-time">
                                                <span>@ViewBag.TimeMsg</span>
                                            </div>
                                        </div>
                                    </div>
                                            }
                                        </div>
                                        <div class="au-message__footer">
                                            <button class="au-btn au-btn-load js-load-btn">load more</button>
                                        </div>
                                    </div>
                                }
                                    else
                                
                            {
                                using (Html.BeginForm("ViewChat", "AdminDash", FormMethod.Post))
                                {
                                   

                                <div class="au-chat">
                                    <a href="@Url.Action("ViewReq_Demo", "AdminDash")"><svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="64" height="64"
     viewBox="0 0 172 172"
     style=" fill:#000000;"><g fill="none" fill-rule="nonzero" stroke="none" stroke-width="1" stroke-linecap="butt" stroke-linejoin="miter" stroke-miterlimit="10" stroke-dasharray="" stroke-dashoffset="0" font-family="none" font-weight="none" font-size="none" text-anchor="none" style="mix-blend-mode: normal"><path d="M0,172v-172h172v172z" fill="none"></path><g><path d="M2.65391,86c0,-46.02344 37.32266,-83.34609 83.34609,-83.34609c46.02344,0 83.34609,37.32266 83.34609,83.34609c0,46.02344 -37.32266,83.34609 -83.34609,83.34609c-46.02344,0 -83.34609,-37.32266 -83.34609,-83.34609z" fill="#4272d7"></path><path d="M132.89688,75.85469c-21.86953,0 -43.77266,0 -65.64219,0c3.89687,-3.89687 7.79375,-7.79375 11.69062,-11.69062c9.00312,-9.00313 -5.00547,-22.91094 -14.04219,-13.87422c-9.50703,9.50703 -19.01406,19.01406 -28.52109,28.52109c-3.82969,3.82969 -3.72891,10.17891 0.06719,13.94141c9.50703,9.50703 19.01406,19.01406 28.52109,28.52109c9.00313,9.00313 22.91094,-5.00547 13.87422,-14.04219c-3.86328,-3.86328 -7.76016,-7.76016 -11.62344,-11.62344c21.83594,0 43.67188,0 65.50781,0c12.76563,0 12.86641,-19.75312 0.16797,-19.75312z" fill="#ffffff"></path></g></g></svg></a>
                                    <div class="au-chat__title">
                                        <div class="au-chat-info">
                                            <div class="avatar-wrap online">
                                                <div class="avatar avatar--small">
                                                    <img src="@Url.Content(@ViewBag.image)" alt="John Smith">
                                                </div>
                                            </div>
                                            <span class="nick">
                                                <a href="#">@ViewBag.Name</a>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="au-chat__content">
                                        <div class="recei-mess-wrap">
                                            <span class="mess-time">@ViewBag.TimeMsg</span>
                                            <div class="recei-mess__inner">
                                                @*<div class="avatar avatar--tiny">
                        <img src="images/icon/avatar-02.jpg" alt="John Smith">
                    </div>*@
                                                <div class="recei-mess-list">
                                                     <div class="recei-mess">@ViewBag.Message</div>

                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                 
                                    
                                }
                            }
                            </div>
   
                      
                        </div>
                </div>
            

            </div>
    </div>
</div>
}        