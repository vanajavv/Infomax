

@{
                /**/

                ViewBag.Title = "UploadSliderImage";
                Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/AdminDesign/css/AdminLTE.css" rel="stylesheet" />


<script type="text/javascript">

    $(document).ready(function () {
        $("#dataTable").dataTable();
    });
</script>
<style>
    .row {
        margin-left: 15px;
    }
</style>
<body>
    <!-- Site wrapper -->
    <div class="wrapper" style=" margin-top:-50px;">

        <div class="content-wrapper" style="margin-left:-10px;">
            <!-- Content Header (Page header) -->
            <section class="au-breadcrumb m-t-75">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="au-breadcrumb-content">
                                    <div class="au-breadcrumb-left"></div>
                                    <button style="margin-left:600px;" class="au-btn au-btn-icon au-btn--green" data-toggle="modal" data-target="#myModal">
                                        <i class="zmdi zmdi-plus"></i>headter images
                                    </button>
                                    <button class="au-btn au-btn-icon au-btn--green" data-toggle="modal" data-target="#myModalPage">
                                        <i class="zmdi zmdi-plus"></i>add pages
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Main content -->
            <section class="content">

                <div class="cols-sm-4 " style="margin-left:20px;">

                    <!-- Default box collapsed-box-->
                    <!--Modal for Header Image-->
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Upload New Header Image</h4>
                                    <button type="button" class="close" data-dismiss="modal">×</button>
                                </div>
                                <div class="modal-body">
                                    @using (Html.BeginForm("HeaderImage", "AdminDash", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {

                                        <div class="box-body">
                                            <div class="row">

                                                <div class="col-xs-12">

                                                    <div class="form-group">
                                                        <label>Select Page<font color="#C9364D">*</font></label>

                                                        @Html.DropDownList("MenuPage", (SelectList)ViewBag.var1, "Choose Page")

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Header Image (1920x400)<font color="#C9364D">*</font></label><br />
                                                        <input type="file" name="Image" id="Image" class="required" accept="image/*" />
                                                    </div>
                                                </div>


                                            </div>

                                        </div><!-- /.box-body -->
                                        <div class="box-footer">
                                            <input name="bgimage" type="submit" id="bgimage" class="btn btn-primary" value="Update" />
                                        </div><!-- /.box-footer-->

                                    }


                                </div>

                            </div>
                        </div>
                    </div><!-- /.box -->
                    <!--Modal for Adding pages-->

                    <div class="modal fade" id="myModalPage">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Add Page</h4>
                                    <button type="button" class="close" data-dismiss="modal">×</button>
                                </div>
                                <div class="modal-body">
                                    @using (Html.BeginForm("Pages", "AdminDash", FormMethod.Post))
                                    {

                                        <div class="box-body">
                                            <div class="row">

                                                <div class="col-xs-12">

                                                    <div class="form-group">
                                                        <label>Page<font color="#C9364D">*</font></label>

                                                        <input type="text" required name="PageName" class="form-control" />
                                                    </div>

                                                </div>
                                            </div>

                                        </div><!-- /.box-body -->
                                        <div class="box-footer">
                                            <input name="bgimage" type="submit" id="bgimage" class="btn btn-primary" value="Update" />
                                        </div><!-- /.box-footer-->

                                    }


                                </div>

                            </div>
                        </div>
                    </div>



                </div>

                @* <div class="container row">*@

                <!-- Default box collapsed-box-->
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Header Images</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>

                    <div class="box-body row">
                        @foreach (var item in Model)
                        {
                            <div class="row-cols-lg-3 m-3">
                                <div class="info-box">
                                    <div class="info-box-content" style="margin:5px;">
                                        <span class="info-box-number" style="height:78px;width:200px;"><img src="@Url.Content(@item.Image)" width="100%" alt="" data-toggle="tooltip" title=@item.Header /></span>

                                        <div class="progress">
                                            <div class="progress-bar" style="width:0%"></div>
                                        </div>
                                        <span class="progress-description">

                                            <span>
                                                @item.Header
                                            </span>
                                        </span>
                                        <div class="col" style="clear:both;"></div>
                                    </div><!-- /.info-box-content -->
                                    <div class="col-1"></div>
                                </div><!-- /.info-box -->
                                <div class="col-4"></div>
                            </div>

                        }

                        <div style="clear:both;"></div>
                    </div><!-- /.box-body -->
                    <!-- /.box-body -->


                </div><!-- /.box -->
                @*  </div>*@




            </section><!-- /.content -->
            <div style="clear:both;"></div>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#pages").validate({
                    messages: { page_img: { accept: 'support .jpg' } }
                });
            });
        </script>

        <div class="modal modal-danger fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Are U sure to Delete?</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="cancel" class="btn btn-outline pull-left" data-dismiss="modal">Cancel</button>
                        <button type="button" id="confirm" class="btn btn-outline">Delete</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </div> <!-- ./wrapper -->
    <!-- SlimScroll -->
    <script src="~/Content/AdminDesign/js/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='plugins/fastclick/fastclick.min.js'></script>
    <!-- AdminLTE App -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/js/app.min.js" type="text/javascript"></script>

</body>


